@inherits CustomButtonBase

<button @onclick="@(() => ButtonClick.InvokeAsync(null))" class="yellow-background div-square-button d-flex align-items-center justify-content-center">
    @*<span class="font-size:30px">@Text </span>*@
    <span style="font-size:@FontSize">@ChildContent </span>
</button>


<style>
    .div-square-button {
        height: 30px;
        width: 30px;
        border-radius: 10%;
        transition: border-radius ease-in-out .2s;
    }
        .div-square-button:hover {
            cursor: pointer;
            border-radius: 50%;
            transition: border-radius ease-in-out .2s;
        }
</style>

