
<div class="form-check form-check-inline">
    <input class="form-check-input"  @onchange="((e) => OnChange.InvokeAsync((bool)e.Value))" type="checkbox"  id="@CheckBoxId" value="@Value">
    <label class="form-check-label yellow-text" for="@CheckBoxId">@Label</label>
</div>

@code {

    [Parameter]
    public EventCallback<bool> OnChange { get; set; }

    [Parameter]
    public bool Value { get; set; }
    [Parameter]
    public string Label { get; set; }
    [Parameter]
    public string CheckBoxId { get; set; }

}
